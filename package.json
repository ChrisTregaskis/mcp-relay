{
  "name": "mcp-relay",
  "version": "0.1.0",
  "description": "Custom MCP server exposing shared AI tools (Jira, brand guidelines) to any MCP-compatible client",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "node --watch dist/transports/stdio.js",
    "dev:build": "tsc --watch",
    "build": "tsc",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.28.1",
  "dependencies": {
    "@aws-sdk/client-s3": "3.989.0",
    "@modelcontextprotocol/sdk": "1.26.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "25.2.3",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  }
}
